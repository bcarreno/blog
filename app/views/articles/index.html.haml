%h1 Listing articles

%table
  %tr
    %th Title
    %th Keywords
    %th Body
    %th
    %th
    %th

  - @articles.each do |article|
    %tr
      %td= article.title
      %td= article.keywords
      %td= article.body
      %td= link_to 'Show', article
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Delete', article, :confirm => 'Are you sure?', :method => :delete

%p= link_to 'New Article', new_article_path
