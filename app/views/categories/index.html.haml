- set_title 'Listing categories'

%table
  %tr
    %th Name
    %th Description
    %th
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= category.name
      %td= category.description
      %td= link_to 'Show', category
      %td= link_to 'Edit', edit_category_path(category)
      %td= link_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete

%p= link_to 'New Category', new_category_path
