- set_title 'Listing comments'

%table
  %tr
    %th Name
    %th Email
    %th Body
    %th Article
    %th
    %th
    %th

  - @comments.each do |comment|
    %tr
      %td= comment.name
      %td= comment.email
      %td= comment.body
      %td= comment.article_id
      %td= link_to 'Show', article_comment_path(comment.article, comment)
      %td= link_to 'Edit', edit_article_comment_path(comment.article, comment)
      %td= link_to 'Delete', article_comment_path(comment.article, comment), :confirm => 'Are you sure?', :method => :delete

%p= link_to 'New Comment', new_article_comment_path
