= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        #{pluralize(@comment.errors.count, "error")}
        prohibited this comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :article_id
    = f.number_field :article_id
  .actions
    = f.submit 'Save'
