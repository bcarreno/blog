- set_title 'Login'

= form_tag sessions_path do
  %table.form
    %tr.field
      %td= label_tag :username
      %td= text_field_tag :username, params[:username], autofocus: true
    %tr.field
      %td= label_tag :password
      %td= password_field_tag :password
    %tr.actions
      %td
      %td= submit_tag 'Login'
